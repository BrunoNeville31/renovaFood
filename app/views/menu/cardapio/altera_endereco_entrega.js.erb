
$('#modalEntrega').modal('hide');
$('#entrega_endereco')[0]['textContent'] = `<%= $entrega[:rua] %>, <%= $entrega[:numero]%> - <%= $entrega[:complemento]%>/<%= $entrega[:cidade]%>`;
$('#valor_entrega')[0]['textContent'] = `<%= $entrega[:valor] %>`;


valor_total = parseFloat($('#valor_total_final')[0]['textContent'].replace('R$ ','').replace(',','.'))
valor_entrega = parseFloat($('#valor_entrega')[0]['textContent'].replace('R$ ','').replace(',','.'))

valor = valor_total + valor_entrega

$('#valor_total_final')[0]['textContent'] = ` R$ ${valor.toLocaleString()}`;