<div class="col-sm-12">
    <div class="card">
        <div class="card-body">
            <br>
            <div class="table-responsive">
                <table class="table table-centered table-nowrap mb-0">
                    <thead class="thead-light">
                        <tr>
                            <th>Nome</th> 
                            <th></th>
                            <th></th>                  
                        </tr>
                    </thead>
                    <tbody>
                        <% @categorias.each do |categoria| %>
                            <tr>                            
                                <td><%= categoria.nome %></td>
                                <td>
                                    <% if categoria.avatar_category.attached? %>
                                        <%= image_tag categoria.avatar_category, class: 'rounded avatar-sm' %>
                                    <% else %>

                                    <% end %>
                                </td>
                                <td class="centro"> 
                                <%=link_to "Editar", edit_admin_category_path(categoria), class: 'btn btn-primary btn-sm btn-rounded waves-effect waves-light'%>
                            </td>
                            </tr>
                        <%end%>
                    </tbody>
                </table>
            </div>           
        </div>
    </div>
</div>
