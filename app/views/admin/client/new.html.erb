<%=form_with(url: admin_client_index_path, model: @client, method: :post, local: true) do |form|%>
<div class="col-sm-12">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title mb-4">Cadastro de Cliente</h4>   

                <div class="row" style="align-self: center;">
                    <div class="col-sm-3">
                        <div class="custom-control custom-checkbox mb-3">                            
                            <input type="checkbox" name="client[status]" class="custom-control-input" id="ativoCliente" checked=''>
                            <label class="custom-control-label" for="ativoCliente">Ativa</label>
                        </div>
                    </div>
                </div>
                
                <div class="form-group">
                    <label for="formrow-firstname-input">Nome</label>                    
                    <%=form.text_field :nome, class: 'form-control'%>
                </div>

                <div class="row">
                    
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="formrow-email-input">Telefone</label>                            
                            <%=form.text_field :fone, class: 'form-control'%>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="formrow-email-input">CPF/CNPJ</label>                            
                            <%=form.text_field :cpf, class: 'form-control'%>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="formrow-email-input">E-mail</label>                            
                            <%=form.text_field :email, class: 'form-control'%>
                        </div>
                    </div>
                    
                </div>

                <div class="row">                    
                    <div class="col-md-5">
                        <div class="form-group">
                            <label for="formrow-email-input">Rua</label>                            
                            <%=form.text_field :rua, class: 'form-control'%>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label for="formrow-email-input">Número</label>                            
                            <%=form.text_field :numero, class: 'form-control'%>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label for="formrow-email-input">CEP</label>                            
                            <%=form.text_field :cep, class: 'form-control'%>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="formrow-email-input">Complemento</label>                            
                            <%=form.text_field :complemento, class: 'form-control'%>
                        </div>
                    </div>                    
                </div>

                <div class="row">                    
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="formrow-email-input">Cidade</label>                            
                            <%=form.text_field :cidade, class: 'form-control'%>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label for="formrow-email-input">Estado</label>                            
                            <%=form.text_field :estado, class: 'form-control'%>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label for="formrow-email-input">Aniversário</label>                            
                            <%=form.date_field :aniversario, class: 'form-control'%>
                        </div>
                    </div>                                      
                </div>                    
        </div>
    </div>            
    <div class="card">
        <div class="card-body">
            <div>
                <button type="submit" class="btn btn-primary btn-block w-md">Salvar</button>
            </div>
        </div>
    </div>
</div>
<%end%>