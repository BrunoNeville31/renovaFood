<div class="col-sm-12">
    <div class="card">
        <div class="card-body">
            <div class="row"> 
                <div class="col-sm-2">
                    <label>Status</label>
                    <select class="form-control">
                        <option value="">Todos</option>
                        <option value="0">Inativo</option>
                        <option value="1">Ativo</option>
                    </select>
                </div>
                <div class="col-sm-10 canto">                    
                    <%=link_to new_admin_client_path, class: 'btn btn-success waves-effect waves-light w-sm' do%>
                        <i class="mdi mdi-pencil d-block font-size-16"></i> Novo
                    <%end%>
                </div>
            </div>
        </div>
    </div>
</div>
  
<div class="col-sm-12">
    <div class="card">
        <div class="card-body">
            <br>
            <div class="table-responsive">
                <table class="table table-centered table-nowrap mb-0">
                    <thead class="thead-light">
                        <tr>
                            <th>Nome</th>                            
                            <th>Email</th>
                            <th>Telefone</th>
                            <th>Status</th>
                            <th></th>                            
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                     <% @clients.each do |client|%>
                        <tr>                            
                            <td><%=client.nome%></td>
                            <td><%=client.email%></td>
                            <td><%=client.fone %></td>
                            <td>
                                <% if client.status == false %>
                                    <span class="badge badge-pill badge-soft-danger font-size-12">Inativo</span>
                                <%else%>
                                    <span class="badge badge-pill badge-soft-success font-size-12">Ativo</span>
                                <% end %>                            
                            </td>
                            <td><img class="rounded-circle avatar-sm" src="<%= client.src %>" alt="..."></td>                            
                            <td style="text-align: center;"> 
                                <%=link_to "Editar", edit_admin_client_path(client), class: 'btn btn-primary btn-sm btn-rounded waves-effect waves-light'%>
                            </td>
                        </tr>
                      <%end%>
                    </tbody>
                </table>
            </div>           
        </div>
    </div>
</div>
