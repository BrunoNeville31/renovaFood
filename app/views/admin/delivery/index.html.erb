<div class="col-sm-12">
    <div class="card">
        <div class="card-body">
            <div class="row"> 
                <div class="col-sm-2">                    
                </div>
                <div class="col-sm-10 canto">                    
                    <%=link_to new_admin_delivery_path, class: 'btn btn-success waves-effect waves-light w-sm' do%>
                        <i class="mdi mdi-pencil d-block font-size-16"></i> Novo
                    <%end%>
                </div>
            </div>
        </div>
    </div>
</div>
<style>
  th{
      text-align: center;
  }
</style>
  
<div class="col-sm-12">
    <div class="card">
        <div class="card-body">
            <br>
            <div class="table-responsive">
                <table class="table table-centered table-nowrap mb-0">
                    <thead class="thead-light">
                        <tr>
                            <th>Bairro</th>                            
                            <th>Taxa(R$)</th>                                                        
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                     <% @entregas.each do |delivery|%>
                        <tr>                            
                            <td><%=delivery.bairro_nome%></td>
                            <td style="text-align: center;"><%=delivery.valor%></td>                                                      
                            <td style="text-align: center;"> 
                                <%=link_to "Editar", edit_admin_delivery_path(delivery), class: 'btn btn-primary btn-sm btn-rounded waves-effect waves-light'%>
                            </td>
                        </tr>
                      <%end%>
                    </tbody>
                </table>
            </div>           
        </div>
    </div>
</div>
