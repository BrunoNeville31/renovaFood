
<%= form_with(url: admin_product_simple_index_path, method: :post, local: true) do |form| %>
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title mb-4">Cadastro de Produto Individual</h4>   

                        <div class="row" style="align-self: center;">
                            <div class="col-sm-3">
                                <div class="custom-control custom-checkbox mb-3">
                                    <input type="checkbox" name="product_simple[status]" class="custom-control-input" checked= '' id="ativoProduto" checked=''>
                                    <label class="custom-control-label" for="ativoProduto">Ativa</label>
                                </div>
                            </div>
                        </div>
                        
                        <div class="form-group">
                            <label for="formrow-firstname-input">Nome</label>
                            <input type="text" name="product_simple[nome]" class="form-control">
                        </div>                        

                        <div class="row">
                            <div class="col-lg-2">
                                <div class="form-group">
                                    <label for="formrow-inputCity">Valor</label>
                                    <input  id="input-currency-valor" 
                                            name="product_simple[valor_cents]"
                                            class="form-control input-mask text-left"                                             
                                            data-inputmask="'alias': 'numeric', 'groupSeparator': ',', 'digits': 2, 'digitsOptional': false, 'prefix': 'R$ ', 'placeholder': ''" 
                                            style="text-align: right;" 
                                            im-insert="true">
                                </div>
                            </div>    
                            
                            <div class="col-lg-2">
                                <div class="form-group">
                                    <label for="formrow-inputCity">Estoque Atual</label>
                                    <input type="number" name="product_simple[estoque_atual]" class="form-control">
                                </div>
                            </div>
                            <div class="col-lg-2">
                                <div class="form-group">
                                    <label for="formrow-inputState">Estoque Min</label>
                                    <input type="number" name="product_simple[estoque_min]" class="form-control">
                                </div>
                            </div>
                        </div>
                        <br>    
                                
                </div>
            </div>            
            <div class="card">
                <div class="card-body">
                    <div>
                        <button type="submit" class="btn btn-primary btn-block w-md">Salvar</button>
                    </div>
                </div>
            </div>
        </div>        
    </div>

<%end%>