<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
<style>
    body{
       background-color: #8080808a;
    }
    .padding{
        padding: 5px;
    }
    .centro{
        text-align: center;
    }
    #pedido {        
        font-size: 12px;
    }
    .canto-dir{
        text-align: end;
    }
    #adicional{
        font-size: 10px;
        margin-left: 5px;
    }
</style>
<div class="" style="width: 400px;background-color: #f0e9bb;">
    <div class="padding centro">
        <h3><%= $empresaPedido.nome %></h3>
    </div>
    <div class="centro">
        <h6><%=$empresaPedido.rua%> - <%=$empresaPedido.numero%> / <%=$empresaPedido.bairro%></h6>
        <h6>Telefone: <%=$empresaPedido.fone%></h6>
    </div>
    <hr style="border 1px solid black">
    <br>
    <div class="row">
        <div class="col-sm-8">
            <h6>NÂ° Pedido: #<%=@pedido.numero%></h6>
        </div>
        <div class="col-sm-4 centro">
            <%= @pedido.created_at.strftime('%d/%m/%Y') %>
        </div>
    </div>
    <hr style="border 1px solid black">
    <div class="row">
        <div class="col-sm-8">
            <h6>Pedido</h6>
        </div>
        <div class="col-sm-1">
            <h6>Qtd.</h6>
        </div>
        <div class="col-sm-3 canto-dir">
            <h6>Valor</h6>
        </div>
    </div>
    <hr style="border 1px solid black">
    
    <div class="row">
        <div class="col-sm-8">
            <h6>X-tudo</h6>
        </div>
        <div class="col-sm-1">
            <h6>1</h6>
        </div>
        <div class="col-sm-3 canto-dir">
            <h1 id="pedido">R$ 60,00</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-8">
            <h6 id="adicional">banana </h6>
        </div>
        <div class="col-sm-1">
            <h6>2</h6>
        </div>
        <div class="col-sm-3 canto-dir">
            <h1 id="pedido">R$20,00</h1>
        </div>
    </div>
    <hr style="border 1px solid black">
    <div class="row">
        <div class="col-sm-6">
            <h5>Entrega</h5>
        </div>
        <div class="col-sm-6 canto-dir">
            <h6><%= number_to_currency(@pedido.taxa_entrega, :unit => 'R$ ', :separator => ',')%></h6>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <h5>Total</h5>
        </div>
        <div class="col-sm-6 canto-dir">
            <h6><%= number_to_currency(@pedido.valor_total, :unit => 'R$ ', :separator => ',')%></h6>
        </div>
    </div>
</div>

