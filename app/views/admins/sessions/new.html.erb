
<div class="col-md-8 col-lg-6 col-xl-5">
    <div class="card overflow-hidden">
        
        <div class="bg-soft-primary">
            <div class="row">                
                <div class="col-12" style="text-align: center;padding: 20px;background: #b50909;">
                    <%= image_tag "logo-light.png", :height => 80 %>
                </div>
            </div>
        </div>
        
        <div class="card-body pt-0">             
            <div class="p-2">
                <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "form-horizontal") do |f| %>

                    <div class="form-group">
                        <label for="username">Email</label>
                        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
                    </div>

                    <div class="form-group">
                        <label for="userpassword">Senha</label>
                        <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
                    </div>

                    <div class="custom-control custom-checkbox">
                        <%= f.check_box :remember_me, class: "custom-control-input" %>
                        <label class="custom-control-label" for="customControlInline">Lembra senha</label>
                    </div>
                    
                    <div class="mt-3">
                        <%= f.submit "Log in", class: "btn btn-primaryCostumized btn-block waves-effect waves-light" %>
                    </div>                      

                    <div class="mt-4 text-center">
                        <a href="/admins/password/new" class="text-muted"><i class="mdi mdi-lock mr-1"></i> Esqueceu a Senha?</a>
                    </div>
                <%end%>
            </div>

        </div>
    </div>
    <div class="mt-5 text-center">  
    </div>

</div>
